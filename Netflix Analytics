-- In this PostgreSQL code, I'm querying a database holding Netflix data to answer questions about the data.


-- Join two tables from the Netflix database.
SELECT 
titles.title, 
titles.country, 
titles.release_year, 
people.director 
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info" titles
JOIN "CharlotteChaze/BreakIntoTech"."netflix_people" people
ON titles.show_id = people.show_id
ORDER BY titles.country;


-- How many movie titles are in the database?
SELECT count(*)
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
WHERE type = 'Movie';


-- When was the most recent batch of tv shows or movies added to the database?
SELECT max(date(date_added))
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info";


-- List all the movie and tv shows in alphabetical order.
SELECT title
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
ORDER BY title asc;


-- Who was the director for the movie Bright Start?
SELECT 
titles.title, 
people.director
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info" titles
JOIN "CharlotteChaze/BreakIntoTech"."netflix_people" people
ON titles.show_id = people.show_id
WHERE titles.title = 'Bright Star';


-- What is the oldest movie in the database and what year was it made?
SELECT
title,
release_year
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
ORDER BY release_year asc
LIMIT 1;
